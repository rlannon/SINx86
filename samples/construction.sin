// construction.sin
// tests 'construct' keyword

def struct point3d
{
    alloc int x;
    alloc int y;
    alloc int z;
}

def int main(alloc dynamic array<string> args)
{
    alloc point3d point;
    construct point
    {
        x: 10,
        y: 20,
        z: 30,
    };

    alloc point3d second: construct point3d {
        x: 100 * 2,
        y: x + 1,
        z: y * 5,
    };

    return 0;
}